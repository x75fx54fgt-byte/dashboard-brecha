// app/api/save/route.ts
import { NextResponse } from "next/server";
import { db } from "../../lib/db";

// IMPORTANTE: SQLite es Node runtime (no Edge)
export const runtime = "nodejs";

export async function POST(req: Request) {
  try {
    const body = await req.json();

    const ts = typeof body.ts === "number" ? body.ts : Date.now();
    const bcv = Number(body.bcv);
    const binance = Number(body.binance);
    const brecha = Number(body.brecha);

    if (![bcv, binance, brecha].every((n) => Number.isFinite(n))) {
      return NextResponse.json(
        { ok: false, error: "Datos inv√°lidos" },
        { status: 400 }
      );
    }

    const stmt = db.prepare(
      `INSERT INTO rates (ts, bcv, binance, brecha) VALUES (?, ?, ?, ?)`
    );
    const info = stmt.run(ts, bcv, binance, brecha);

    return NextResponse.json({
      ok: true,
      id: info.lastInsertRowid,
      ts,
    });
  } catch (e: any) {
    return NextResponse.json(
      { ok: false, error: e?.message ?? "Error" },
      { status: 500 }
    );
  }
}
